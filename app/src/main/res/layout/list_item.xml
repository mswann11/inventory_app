<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_padding">

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/item_margin"
        android:layout_marginRight="@dimen/item_margin"
        android:maxWidth="@dimen/item_max_width"
        android:paddingBottom="@dimen/item_padding"
        android:textAppearance="?android:textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/item_padding"
            android:paddingRight="@dimen/item_padding"
            android:text="@string/price_text_view"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/price_padding"
            android:paddingRight="@dimen/price_padding"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/item_padding"
            android:text="@string/in_stock_text_view"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sale_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/sale_button_margin"
        android:layout_marginLeft="@dimen/sale_button_padding"
        android:layout_marginStart="@dimen/sale_button_padding"
        android:background="@drawable/sale_button_background"
        android:elevation="@dimen/sale_button_elevation"
        android:gravity="center"
        android:paddingHorizontal="@dimen/sale_button_padding"
        android:paddingVertical="@dimen/sale_button_padding"
        android:src="@drawable/ic_shopping_cart"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</RelativeLayout>